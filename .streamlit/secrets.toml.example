# Streamlit Secrets Configuration Template
# Copy this content to your Streamlit Cloud app's Secrets section
# Go to: https://share.streamlit.io → Your App → Settings → Secrets

# ===== LLM Provider API Keys =====

# Google Gemini (Recommended)
GEMINI_API_KEY = "your_gemini_api_key_here"

# Groq (Ultra-fast, free tier)
GROQ_API_KEY = "your_groq_api_key_here"

# OpenAI
OPENAI_API_KEY = "your_openai_api_key_here"

# Anthropic (Claude)
ANTHROPIC_API_KEY = "your_anthropic_api_key_here"

# Cohere
COHERE_API_KEY = "your_cohere_api_key_here"

# OpenRouter (Multi-model)
OPENROUTER_API_KEY = "your_openrouter_api_key_here"

# Azure OpenAI (requires both)
AZURE_OPENAI_KEY = "your_azure_key_here"
AZURE_OPENAI_ENDPOINT = "https://your-resource.openai.azure.com/"

# Hugging Face
HUGGINGFACE_API_KEY = "your_huggingface_token_here"

# ===== Default Settings =====

DEFAULT_PROVIDER = "gemini"
DEFAULT_MODEL = "gemini-2.0-flash-exp"

# ===== Custom Providers (Optional) =====
# You can pre-configure custom providers using environment variables

# Example: Local Ollama
# CUSTOM_OLLAMA_NAME = "Local Ollama"
# CUSTOM_OLLAMA_BASE_URL = "http://localhost:11434/v1"
# CUSTOM_OLLAMA_API_KEY = "not-needed"
# CUSTOM_OLLAMA_MODEL = "llama3"
